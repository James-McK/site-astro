---
const places = [
	{
		"name": "🏡 Home",
		"path": "/"
	},
	{
		"name": "🗒️ Blog",
		"path": "/blog"
	},
	{
		"name": "🗃️ Projects",
		"path": "/projects"
	},
	{
		"name": "💻 Uses",
		"path": "/uses"
	}
]
---

<header>
	<h1>James' small space on the web</h1>
	<nav>
		{places.map(place => (
			<a href=`${place.path}` rel="prefetch-intent">{place.name}</a>
		))}
	</nav>
</header>

<style>
header {
	width: 100%;
	background: var(--surface0);
	display: flex;
	justify-content: space-between;
}

h1 {
	margin: 0;
}

nav {
	display: flex;
	align-items: center;
	padding: 1rem 2rem;
	gap: 1rem;
}

nav a {
	background: var(--surface1);
	padding: 0.3rem 1rem;
	border-radius: 0.5rem;
	color: var(--text);
	text-decoration: none;
	transition-timing-function: cubic-bezier(0.2, 0, 0.2, 1);
	transition:
		filter 0.2s,
		transform 0.15s;
}

a:hover {
	filter: brightness(1.1);
}

nav a:active {
	transform: scale(0.88);
}
</style>